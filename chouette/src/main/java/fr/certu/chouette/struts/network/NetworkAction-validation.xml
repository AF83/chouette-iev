<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="reseau.name">
		<field-validator type="requiredstring">
			<param name="fieldName">reseau.name</param>
			<message key="errors.required"/>
		</field-validator>
		<field-validator type="stringlength">
			<param name="fieldName">reseau.name</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="reseau.registrationNumber" >
		<field-validator type="requiredstring">
			<param name="fieldName">reseau.registrationNumber</param>
			<message key="errors.required"/>
		</field-validator>
		<field-validator type="regex">
			<param name="fieldName">reseau.registrationNumber</param>
			<param name="expression">.+</param>
			<message key="errors.mask"/>
		</field-validator>
		<field-validator type="stringlength">
			<param name="fieldName">reseau.registrationNumber</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="reseau.versionDate" >
		<field-validator type="required">
			<param name="fieldName">reseau.versionDate</param>
			<message key="errors.required"/>
		</field-validator>
	</field>
	<field name="reseau.comment">
		<field-validator type="stringlength">
			<param name="fieldName">reseau.comment</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="reseau.description">
		<field-validator type="stringlength">
			<param name="fieldName">reseau.description</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="reseau.sourceName">
		<field-validator type="stringlength">
			<param name="fieldName">reseau.sourceName</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="reseau.sourceIdentifier">
		<field-validator type="stringlength">
			<param name="fieldName">reseau.sourceIdentifier</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>	
</validators>