<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
  <field name="name">
    <field-validator type="requiredstring">
      <param name="fieldName">transporteur.company.name</param>
      <message key="errors.required" />
    </field-validator>
    <field-validator type="stringlength">
      <param name="fieldName">transporteur.company.name</param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field name="transporteur.company.shortName">
    <field-validator type="stringlength">
      <param name="fieldName">
				transporteur.company.shortName
      </param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field
		name="transporteur.company.registration.registrationNumber">
    <field-validator type="requiredstring">
      <param name="fieldName">
				transporteur.company.registration.registrationNumber
      </param>
      <message key="errors.required" />
    </field-validator>
    <field-validator type="regex">
      <param name="fieldName">
				transporteur.company.registration.registrationNumber
      </param>
      <param name="expression">.+</param>
      <message key="errors.mask" />
    </field-validator>
    <field-validator type="stringlength">
      <param name="fieldName">
				transporteur.company.registration.registrationNumber
      </param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field name="transporteur.company.organisationalUnit">
    <field-validator type="stringlength">
      <param name="fieldName">
				transporteur.company.organisationalUnit
      </param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field name="transporteur.company.operatingDepartmentName">
    <field-validator type="stringlength">
      <param name="fieldName">
				transporteur.company.operatingDepartmentName
      </param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field name="transporteur.company.code">
    <field-validator type="stringlength">
      <param name="fieldName">transporteur.company.code</param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
  </field>
  <field name="transporteur.company.email">
    <field-validator type="stringlength">
      <param name="fieldName">transporteur.company.email</param>
      <param name="maxLength">255</param>
      <message key="errors.maxlength" />
    </field-validator>
    <field-validator type="email">
      <param name="fieldName">transporteur.company.email</param>
      <message key="errors.email" />
    </field-validator>
  </field>
</validators>