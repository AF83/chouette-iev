<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="ligne.name">
		<field-validator type="requiredstring">
			<param name="fieldName">ligne.name</param>
			<message key="errors.required"/>
		</field-validator>
		<field-validator type="stringlength">
			<param name="fieldName">ligne.name</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="ligne.publishedName">
		<field-validator type="stringlength">
			<param name="fieldName">ligne.publishedName</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>	
	<field name="ligne.registrationNumber" >
		<field-validator type="requiredstring">
			<param name="fieldName">ligne.registrationNumber</param>
			<message key="errors.required"/>
		</field-validator>
		<field-validator type="regex">
			<param name="fieldName">ligne.registrationNumber</param>
			<param name="expression">.+</param>
			<message key="errors.mask"/>
		</field-validator>
		<field-validator type="stringlength">
			<param name="fieldName">ligne.registrationNumber</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="ligne.number">
		<field-validator type="stringlength">
			<param name="fieldName">ligne.number</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="ligne.comment">
		<field-validator type="stringlength">
			<param name="fieldName">ligne.comment</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
</validators>