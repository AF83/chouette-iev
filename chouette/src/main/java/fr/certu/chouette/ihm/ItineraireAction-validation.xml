<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="itineraire.name">
		<field-validator type="requiredstring">
			<param name="fieldName">itineraire.name</param>
			<message key="errors.required"/>
		</field-validator>
		<field-validator type="stringlength">
			<param name="fieldName">itineraire.name</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="itineraire.publishedName" >
		<field-validator type="stringlength">
			<param name="fieldName">itineraire.publishedName</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="itineraire.number">
		<field-validator type="stringlength">
			<param name="fieldName">itineraire.number</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
	<field name="itineraire.comment">
		<field-validator type="stringlength">
			<param name="fieldName">itineraire.comment</param>
			<param name="maxLength">255</param>
			<message key="errors.maxlength"/>
		</field-validator>
	</field>
</validators>