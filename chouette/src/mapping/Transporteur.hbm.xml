<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="fr.certu.chouette.modele.Transporteur"
        table="Company"
        dynamic-update="false"
        dynamic-insert="false">

		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>

        <property name="objectId" type="string" unique="true" column="objectId" />
		<property name="objectVersion" type="int" column="objectVersion" />
		<property name="creationTime" type="java.util.Date" column="creationTime" />
		<property name="creatorId" type="string" column="creatorId" />

        <property name="name" column="name" />
        <property name="shortName" column="shortName" />
        <property name="organisationalUnit" column="organizationalUnit" />
        <property name="operatingDepartmentName" column="operatingDepartmentName" />
        <property name="code" column="code" />
        <property name="phone" column="phone" />
        <property name="fax" column="fax" />
        <property name="email" column="email" />
		<property name="registrationNumber" column="registrationNumber" unique="true" />
    </class>
</hibernate-mapping>
