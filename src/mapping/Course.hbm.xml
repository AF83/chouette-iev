<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="fr.certu.chouette.modele.Course"
        table="VehicleJourney"
        dynamic-update="false"
        dynamic-insert="false"
    >

		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>
        <property name="idItineraire" column="idItineraire"/>
        <property name="idMission" column="idMission"/>
        
        <property name="objectId" type="string" unique="true" column="objectId" />
		<property name="objectVersion" type="int" column="objectVersion" />
		<property name="creationTime" type="java.util.Date" column="creationTime" />
		<property name="creatorId" type="string" column="creatorId" />
        
        <property name="publishedJourneyName" column="publishedJourneyName" />
        <property name="publishedJourneyIdentifier" column="publishedJourneyIdentifier" />
        <property name="transportMode"
            type="fr.certu.chouette.dao.hibernate.customtype.TransportModeNameUserType"
            column="transportMode" />
        <property name="vehicleTypeIdentifier" column="vehicleTypeIdentifier" />
        <property name="statusValue"
            type="fr.certu.chouette.dao.hibernate.customtype.ServiceStatusValueUserType"
            column="statusValue" />
        <property name="facility" column="facility" />
        <property name="number" column="number" />
        <property name="comment" column="comment" />
    </class>
</hibernate-mapping>
