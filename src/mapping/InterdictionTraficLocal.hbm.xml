<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="fr.certu.chouette.modele.InterdictionTraficLocal"
        table="itl"
        dynamic-update="false"
        dynamic-insert="false"
    >

		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>

        <list name="arretPhysiqueIds" table="itl_stoparea" cascade="all" lazy="false">
              <key column="idItl" />
              <index column="position" />
              <element column="idstoparea" type="long" />
        </list>

        <property name="objectId" type="string" unique="true" column="objectId" />
	
        <property name="idLigne" column="idLigne"/>
	    <property name="nom" column="nom" />
    </class>

</hibernate-mapping>
