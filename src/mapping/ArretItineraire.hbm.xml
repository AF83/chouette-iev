<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fr.certu.chouette.modele.ArretItineraire" table="StopPoint" dynamic-update="false" dynamic-insert="false">
		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>
		
        <property name="idItineraire" column="idItineraire"/>
        <property name="idPhysique" column="idPhysique"/>
    	<property name="modifie" column="modifie"/>
        <property name="position" column="position" type="int" />

        <property name="objectId" type="string" unique="true" column="objectId" />
		<property name="objectVersion" type="int" column="objectVersion" />
		<property name="creationTime" type="java.util.Date" column="creationTime" />
		<property name="creatorId" type="string" column="creatorId" />
	</class>
</hibernate-mapping>
