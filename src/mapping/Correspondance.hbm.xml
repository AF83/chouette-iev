<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fr.certu.chouette.modele.Correspondance" table="ConnectionLink" dynamic-update="false" dynamic-insert="false">
		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>
        <property name="idDepart" column="idDepart"/>
        <property name="idArrivee" column="idArrivee"/>
		
        <property name="objectId" type="string" unique="true" column="objectId" />
		<property name="objectVersion" type="int" column="objectVersion" />
		<property name="creationTime" type="java.util.Date" column="creationTime" />
		<property name="creatorId" type="string" column="creatorId" />
		
		<property name="name" type="string" column="name" />
		<property name="comment" type="string" column="comment" />
        <property name="linkDistance" type="java.math.BigDecimal" column="linkDistance" />
		<property name="linkType"
		    type="fr.certu.chouette.dao.hibernate.customtype.ConnectionLinkTypeUserType"
		    column="linkType" />
		<property name="defaultDuration" type="time" column="defaultDuration" />
		<property name="frequentTravellerDuration" type="time" column="frequentTravellerDuration" />
		<property name="occasionalTravellerDuration" type="time" column="occasionalTravellerDuration" />
		<property name="mobilityRestrictedTravellerDuration" type="time" column="mobilityRestrictedTravellerDuration" />
		<property name="mobilityRestrictedSuitability" type="boolean" column="mobilityRestrictedSuitability" />
		<property name="stairsAvailability" type="boolean" column="stairsAvailability" />
		<property name="liftAvailability" type="boolean" column="liftAvailability" />


	</class>
</hibernate-mapping>
