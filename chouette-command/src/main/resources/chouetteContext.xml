<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:./spring.properties</value>
				<value>file:./chouette.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="true"/>
	</bean>

	<!-- <import resource="classpath:/modules/hibernate.xml" /> <import resource="classpath:/modules/managers.xml" 
		/> <import resource="classpath:/modules/neptune_exchange.xml" /> -->

	<bean id="Command" class="fr.certu.chouette.command.Command">
		<property name="managers">
			<map>
				<entry key="line">
					<ref bean="lineManager" />
				</entry>
				<entry key="company">
					<ref bean="companyManager" />
				</entry>
				<entry key="network">
					<ref bean="networkManager" />
				</entry>
				<entry key="route">
					<ref bean="routeManager" />
				</entry>
			</map>
		</property>
	</bean>


</beans>