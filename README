# README WILDFLY

# install (manuel)
cd /opt
tar xvzf wildfly-8.2.0.Final.tgz
cd wildfly-8.2.0.Final

# start (console)
bin/standalone.sh -b 0.0.0.0 -c standalone-full.xml

# add management user 
bin/add-user.sh
type: management user (a)
login : admin
password : admin

# web admin console 
http://localhost:9990/

# admin console (interactive)
bin/jboss-cli.sh
connect
help 

# add postgresql jdbc driver & chouette datasource
bin/jboss-cli.sh 
connect

module add --name=org.postgres --resources=/tmp/postgresql-9.3-1101.jdbc41.jar --dependencies=javax.api,javax.transaction.api

/subsystem=datasources/jdbc-driver=postgres:add(driver-name="postgres",driver-module-name="org.postgres",driver-class-name=org.postgresql.Driver)

data-source add --jndi-name=java:jboss/datasources/chouette --name=chouette --connection-url=jdbc:postgresql://localhost:5432/chouette --driver-name=postgres --user-name=chouette --password=chouette

# deploy chouette apploication
bin/jboss-cli.sh connect, deploy --force  chouette.ear

# shutdown
bin/jboss-cli.sh --connect --command=:shutdown




