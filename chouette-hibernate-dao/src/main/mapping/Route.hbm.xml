<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="Route" table="Route" dynamic-insert="false"
		dynamic-update="false">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="objectId" type="string" unique="true" />
		<property name="objectVersion" type="int" />
		<property name="creationTime" type="java.util.Date" />
		<property name="creatorId" type="string" />
		<property name="name" />
		<property name="oppositeRouteId" type="long" />
		<property name="lineId" type="long" column="lineId" lazy="true" />
		<property name="publishedName" />
		<property name="number" />
		<property name="direction"
			type="fr.certu.chouette.dao.hibernate.usertype.PTDirectionUserType" />
		<property name="comment" />
		<property name="wayBack" />
		<!-- relations --> 
		<bag name="journeyPatterns" lazy="true" cascade="all" inverse="true">
			<key column="routeId" />
			<one-to-many class="JourneyPattern" />
		</bag>
		<!--
		<bag name="journeyPatternIds" table="journeyPattern" inverse="true"
			lazy="false" cascade="none" fetch="join">
			<key column="routeId" />
			<element type="string" column="objectId" />
		</bag>
        -->
		<many-to-one name="line" insert="false" update="false"
			class="Line" cascade="all"
			lazy="no-proxy" outer-join="auto" column="lineId" />

	</class>
</hibernate-mapping>
