<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Projet CHOUETTE ce projet est sous license libre voir LICENSE.txt pour 
	plus de details -->
<hibernate-mapping package="fr.certu.chouette.plugin.model" schema="public">
	<class name="GuiValidation" table="compliance_check_tasks" dynamic-insert="false"
		dynamic-update="false">
		<comment>Import Job</comment>
		<id name="id" type="long">
			<column name="id">
				<comment>Internal identification</comment>
			</column>
			<generator class="identity" />
		</id>
		<property name="referentialId" type="long" unique="true">
			<column name="referential_id" not-null="true">
				<comment>Referential identification</comment>
			</column>
		</property>
		
		<many-to-one name="importTask" class="GuiImport" unique="true">
			<column name="import_task_id" >
				<comment>Import identification</comment>
			</column>
		</many-to-one>
		
		<property name="status" type="string">
			<column name="status">
				<comment>status</comment>
			</column>
		</property>
		<property name="parameters" type="fr.certu.chouette.dao.hibernate.usertype.JsonTextUserType">
			<column name="parameter_set">
				<comment>import options</comment>
			</column>
		</property>
		<property name="userId" type="long">
			<column name="user_id">
				<comment>user</comment>
			</column>
		</property>
		<property name="userName" type="string">
			<column name="user_name">
				<comment>type</comment>
			</column>
		</property>
		<property name="progressInfo" type="fr.certu.chouette.dao.hibernate.usertype.JsonTextUserType">
			<column name="progress_info">
				<comment>import progress information</comment>
			</column>
		</property>
		<bag lazy="false" name="steps" cascade="all-delete-orphan">
			<comment>Vehicle Journey at Stop</comment>
			<key foreign-key="compliance_check_results_compliance_check_task_id_fk">
				<column name="compliance_check_task_id">
					<comment>compliance task</comment>
				</column>
			</key>
			<one-to-many class="GuiValidationStep" />
		</bag>
        <property name="createdAt" column="created_at" type="timestamp"/>
        <property name="updatedAt" column="updated_at" type="timestamp"/>

	</class>
</hibernate-mapping>
