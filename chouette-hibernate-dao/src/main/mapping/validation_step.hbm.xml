<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Projet CHOUETTE ce projet est sous license libre voir LICENSE.txt pour 
	plus de details -->
<hibernate-mapping package="fr.certu.chouette.plugin.model" schema="public">
	<class name="GuiValidationStep" table="compliance_check_results" dynamic-insert="false"
		dynamic-update="false">
		<comment>Import Job</comment>
		<id name="id" type="long">
			<column name="id">
				<comment>Internal identification</comment>
			</column>
			<generator class="identity" />
		</id>
		<property name="ruleCode" type="string">
			<column name="rule_code">
				<comment>rule code</comment>
			</column>
		</property>
		<property name="severity" type="string">
			<column name="severity">
				<comment>severity</comment>
			</column>
		</property>
		<property name="status" type="string">
			<column name="status">
				<comment>status</comment>
			</column>
		</property>
		<property name="violationCount" type="long">
			<column name="violation_count">
				<comment>violation count</comment>
			</column>
		</property>
		<property name="detail" type="fr.certu.chouette.dao.hibernate.usertype.JsonTextUserType">
			<column name="detail">
				<comment>violation details</comment>
			</column>
		</property>
        <property name="createdAt" column="created_at" type="timestamp"/>
        <property name="updatedAt" column="updated_at" type="timestamp"/>

	</class>
</hibernate-mapping>
