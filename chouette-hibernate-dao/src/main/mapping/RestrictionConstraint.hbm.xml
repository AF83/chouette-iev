<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="RestrictionConstraint" table="routingConstraint">
		<comment>Routing Constraint</comment>
		<id name="id" type="long">
			<column name="id">
				<comment>Internal identification</comment>
			</column>
			<generator class="native" />
		</id>
		<property name="objectId" type="string" unique="true" not-null="true">
			<column name="objectId">
				<comment>Neptune identification</comment>
			</column>
		</property>
		<property name="name" >
			<column name="name">
				<comment>Name</comment>
			</column>
		</property>
		<list cascade="all" lazy="false" name="stopAreas"
			table="routingConstraint_stoparea" inverse="false">
			<comment>Stopareas concerned by routingconstraint</comment>
			<key><column name="routingConstraintId"><comment>StopArea Reference</comment></column></key>
			<index><column name="position"><comment>Rank of StopArea in the routing constraint</comment></column></index>
			<many-to-many class="StopArea" column="stopAreaId"/>
		</list>
		<many-to-one class="Line" insert="false"
			lazy="no-proxy" name="line" update="false" >
			<column name="lineId"><comment>Line Reference</comment></column>
		</many-to-one>
	</class>
</hibernate-mapping>
