<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="RestrictionConstraint" table="routingConstraint">
		<id column="id" name="id" type="long">
			<generator class="native" />
		</id>
		<list cascade="all" lazy="false" name="stopAreas"
			table="routingConstraint_stoparea" inverse="false">
			<key column="routingConstraintId" />
			<index column="position" />
			<one-to-many class="StopArea"/>
		</list>
		<!-- <many-to-one class="StopArea" column="stopAreaId" insert="false"
			lazy="no-proxy" name="stopArea" update="false" /> -->
		<property generated="never" lazy="false" name="name" />
		<property column="objectId" generated="never" lazy="false"
			name="areaId" type="string" unique="true" />
		<many-to-one class="Line" column="lineId" insert="false"
			lazy="no-proxy" name="line" update="false" />
	</class>
</hibernate-mapping>
