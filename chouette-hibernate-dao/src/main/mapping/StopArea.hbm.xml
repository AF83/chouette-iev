<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="StopArea" table="StopArea">
		<id column="id" name="id" type="long">
			<generator class="native" />
		</id>
		<property generated="never" lazy="false" name="parentId" />
		<property generated="never" lazy="false" name="objectId"
			type="string" unique="true" />
		<property generated="never" lazy="false" name="objectVersion"
			type="int" />
		<property generated="never" lazy="false" name="creationTime"
			type="java.util.Date" />
		<property generated="never" lazy="false" name="creatorId"
			type="string" />
		<property generated="never" lazy="false" name="name" type="string" />
		<property generated="never" lazy="false" name="comment" type="string" />
		<property generated="never" lazy="false" name="areaType"
			type="fr.certu.chouette.dao.hibernate.usertype.ChouettteAreaTypeUserType" />
		<property generated="never" lazy="false" name="registrationNumber" />
		<property generated="never" lazy="false" name="nearestTopicName"
			type="string" />
		<property generated="never" lazy="false" name="fareCode"
			type="int" />
		<component class="fr.certu.chouette.model.neptune.AreaCentroid"
			name="areaCentroid">
			<property column="objectId" generated="never" insert="false"
				lazy="false" name="containedInStopAreaId" type="string" update="false" />
			<property generated="never" lazy="false" name="longitude"
				precision="19" scale="16" type="java.math.BigDecimal" />
			<property generated="never" lazy="false" name="latitude"
				precision="19" scale="16" type="java.math.BigDecimal" />
			<property generated="never" lazy="false" name="longLatType"
				type="fr.certu.chouette.dao.hibernate.usertype.LongLatTypeUserType" />
			<component class="fr.certu.chouette.model.neptune.type.ProjectedPoint"
				name="projectedPoint">
				<property generated="never" lazy="false" name="x"
					type="java.math.BigDecimal" />
				<property generated="never" lazy="false" name="y"
					type="java.math.BigDecimal" />
				<property generated="never" lazy="false" name="projectionType"
					type="string" />
			</component>
			<component class="fr.certu.chouette.model.neptune.type.Address"
				name="address">
				<property generated="never" lazy="false" name="countryCode"
					type="string" />
				<property generated="never" lazy="false" name="streetName"
					type="string" />
			</component>
		</component>
	</class>
</hibernate-mapping>
