<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="Line" table="Line" dynamic-insert="false" dynamic-update="false" >
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="ptNetworkId" type="long"/>
		<property name="companyId" type="long"/>
		<property name="objectId" type="string" unique="true" />
		<property name="objectVersion" type="int" />
		<property name="creationTime" type="java.util.Date" />
		<property name="creatorId" type="string" />
		<property name="name" type="string" />
		<property name="number" type="string" />
		<property name="publishedName" type="string" />
		<property name="transportModeName" type="fr.certu.chouette.dao.hibernate.usertype.TransportModeNameUserType" />
		<property name="registrationNumber" unique="true" type="string" />
		<property name="comment" />
		<!-- bug hibernate : syntax doesn't works 
		<property name="ptNetworkIdShortcut" type="string" formula="(SELECT p.objectId FROM {h-schema}PtNetwork p WHERE p.id = ptNetworkId)" />
		 -->
		<property name="ptNetworkIdShortcut" type="string" formula="(SELECT p.objectId FROM PtNetwork p WHERE p.id = ptNetworkId)" />

		<!-- relations -->
		<many-to-one name="ptNetwork" insert="false" update="false"
			class="PTNetwork" cascade="none"
			lazy="no-proxy" outer-join="auto" column="PTNetworkId" />
		<many-to-one name="company" insert="false" update="false"
			class="Company" cascade="none"
			lazy="no-proxy" outer-join="auto" column="companyId" />
		<bag name="routes" lazy="true" cascade="all" inverse="true" batch-size="10" >
			<key column="lineId" />
			<one-to-many class="Route" />
		</bag>
		<bag name="routeIds" table="route" inverse="true" lazy="false" cascade="none" fetch="join">
		    <key column="lineId"/>
			<element type="string" column="objectId" />
		</bag>

	</class>
</hibernate-mapping>
