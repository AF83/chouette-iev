<hibernate-mapping package="fr.certu.chouette.model.neptune">
	<class name="JourneyPattern"
		table="JourneyPattern">
		<id column="id" name="id" type="long">
			<generator class="native" />
		</id>
		<property name="objectId" type="string" unique="true" />
		<property name="objectVersion" type="int" />
		<property name="creationTime" type="java.util.Date" />
		<property name="creatorId" type="string" />
		<property name="name" type="string" />
		
		<property name="comment" type="string" />
		<property column="registrationNumber" name="registrationNumber" type="string" />
		<property column="publishedName" name="publishedName" type="string"/>
		
		<set batch-size="10" cascade="all" inverse="false" lazy="true"
			name="stopPoints" table="journeyPattern_stopPoint">
			<key column="journeyPatternId" />
			<many-to-many class="StopPoint" column="stopPointId" />
		</set>
		<many-to-one class="Route" column="routeId" insert="false"
			lazy="no-proxy" name="route" update="false" />
		<set batch-size="10" cascade="all" inverse="true" lazy="true"
			name="vehicleJourneys" table="vehicleJourney">
			<key column="journeyPatternId" />
			<one-to-many class="VehicleJourney" />
		</set>
	</class>
</hibernate-mapping>
